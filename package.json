{
  "name": "solarized-light-custom",
  "displayName": "Solarized Custom",
  "description": "Custom Solarized themes for vs-code",
  "version": "4.0.0",
  "publisher": "bbrakenhoff",
  "engines": {
    "node": ">=12",
    "vscode": "^1.51.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bbrakenhoff/solarized-light-custom/tree/master"
  },
  "categories": [
    "Themes"
  ],
  "main": "./dist/extension/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "themes": [
      {
        "label": "Solarized Custom Light",
        "uiTheme": "vs",
        "path": "./dist/themes/solarized-custom-light.json"
      },
      {
        "label": "Solarized Custom Dark",
        "uiTheme": "vs-dark",
        "path": "./dist/themes/solarized-custom-dark.json"
      }
    ],
    "commands": [
      {
        "command": "solarizedCustomTheme.setAccentColor",
        "title": "Set accent color",
        "category": "Solarized Custom Theme"
      }
    ],
    "configuration": {
      "title": "Solarized Custom Theme",
      "properties": {
        "solarizedCustomTheme.accentColor": {
          "type": "string",
          "default": "Magenta",
          "description": "Current accent color selected",
          "enum": [
            "Blue",
            "Cyan",
            "Green",
            "Magenta",
            "Orange",
            "Red",
            "Violet",
            "Yellow"
          ]
        }
      }
    }
  },
  "icon": "icon.png",
  "__metadata": {
    "id": "1a8bca67-d8c0-4728-8e1b-8bd2d4aa0971",
    "publisherDisplayName": "bbrakenhoff",
    "publisherId": "b60c9515-f4ce-49eb-b537-93f7a2150625"
  },
  "dependencies": {
    "vsce": "^2.10.0"
  },
  "devDependencies": {
    "@types/node": "^18.6.5",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.4.0",
    "eslint-plugin-import": "^2.26.0",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "vscode": "^1.1.37"
  },
  "scripts": {
    "clean": "rm -r -f dist && mkdir dist",
    "build:generate-themes": "ts-node ./src/theme-generation/generate-themes.ts",
    "build:extension": "tsc ./src/extension.ts --outDir ./dist/extension",
    "build": "npm run clean && npm run build:extension && npm run build:generate-themes"
  }
}
